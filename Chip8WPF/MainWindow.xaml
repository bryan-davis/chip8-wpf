<Window x:Class="Chip8WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chip8 Emulator" Height="505" Width="910" KeyDown="Window_KeyDown" 
        KeyUp="Window_KeyUp" Closing="Window_Closing" Name="EmuWindow">
    <DockPanel Background="Black">
        <Menu Name="menu" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Name="menu_loadRom" Header="_Load Rom" Click="LoadRom_Click" />
                <MenuItem Name="menu_exit" Header="_Exit" Click="FileExit_Click" />
            </MenuItem>
        </Menu>
        <Image Name="renderedImage" RenderOptions.BitmapScalingMode="NearestNeighbor"
               RenderOptions.EdgeMode="Aliased" Stretch="Uniform"
               DockPanel.Dock="Bottom" />
    </DockPanel>
</Window>
